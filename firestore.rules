rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can be read by anyone (e.g., to see a seller's profile)
    // but can only be written to by the user themselves.
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Ads can be read by anyone.
    // Creation is allowed for any authenticated user.
    // Updates and deletes are only allowed by the ad's owner.
    match /ads/{adId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Drafts can only be read or written by the user who owns them.
    match /drafts/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Feedback can be created by any authenticated user.
    // Reading/updating/deleting feedback would require admin rules.
    match /feedback/{feedbackId} {
      allow create: if request.auth != null;
    }
  }
}
